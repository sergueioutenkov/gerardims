@model RusoCars.Models.Subcategory
@{
    ViewBag.Title = "Create";
}
<h2>
    Crear Subcategoría</h2>
<br />
@using (Html.BeginForm("Create", "Subcategory", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.ValidationSummary(true)
    <fieldset>
        <legend>Subcategory</legend>
        <div class="editor-label">
            @Html.LabelFor(model => model.Name)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Name)
            @Html.ValidationMessageFor(model => model.Name)
        </div>
        <div class="editor-label">
            @Html.LabelFor(model => model.CategoryId, "Elija Categoría a la cuál pertenece")
        </div>
        <div class="editor-field">
            @Html.DropDownList("CategoryId", String.Empty)
            @Html.ValidationMessageFor(model => model.CategoryId)
        </div>
        <div class="editor-label">
            @Html.LabelFor(model => model.Subcategories_Images, "Imagen")
        </div>
        <div>
            @Html.FilePlusTextBox("file", "FileUploader")
        </div>
        <div id="ImageUploader">
            @Ajax.ActionLink("Añadir otra imagen", "AddImageUploader", new AjaxOptions
       {
           UpdateTargetId = "ImageUploader",
           InsertionMode = InsertionMode.InsertBefore,
           HttpMethod = "GET",
       })
        </div>
             <p>
            <input type="submit" value="Crear" />
        </p>
    </fieldset>
}
<div>
    @Html.ActionLink("Volver", "Index")
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
