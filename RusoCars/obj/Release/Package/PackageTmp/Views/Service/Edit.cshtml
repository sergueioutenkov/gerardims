@model RusoCars.Models.Service
@{
    ViewBag.Title = "Edit";
}
<h2>
    Editar</h2>
@using (Html.BeginForm("Edit", "Service", FormMethod.Post, new { enctype = "multipart/form-data" }))
{ 
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>Service</legend>
        @Html.HiddenFor(model => model.ServiceId)
        <div class="editor-label">
            @Html.LabelFor(model => model.Name)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Name)
            @Html.ValidationMessageFor(model => model.Name)
        </div>
        <div class="editor-label">
            @Html.LabelFor(model => model.Description)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Description)
            @Html.ValidationMessageFor(model => model.Description)
        </div>
        <div class="editor-label">
            @Html.LabelFor(model => model.isCompetition)
        </div>
        <div class="editor-field">
           @Html.DropDownListFor(model => model.isCompetition, new List<SelectListItem>() { new SelectListItem() { Text = "Competicion", Value = "True" }, new SelectListItem() { Text = "Mecanica", Value = "False" } })
        </div>
        <div class="editor-label">
            @Html.LabelFor(model => model.BeforeImage, "BeforeImage")
            @Html.Hidden("BeforeImage", Model.BeforeImage)
        </div>
        <div class="editor-label">
            @Html.FileNoValidation("file", "BeforeImage")
        </div>
        <div class="editor-label">
            @Html.LabelFor(model => model.AfterImage, "AfterImage")
            @Html.Hidden("AfterImage", Model.AfterImage)
        </div>
        <div class="editor-label">
             @Html.FileNoValidation("file", "AfterImage")
        </div>
        <p>
            <input type="submit" value="Save" />
        </p>
    </fieldset>
}
<div>
    @Html.ActionLink("Volver", "Index")
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
