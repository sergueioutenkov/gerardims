@model RusoCars.Models.Service
@{
    ViewBag.Title = "Create";
}
<h2>
    Crear</h2>
@using (Html.BeginForm("Create", "Service", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.ValidationSummary(true)
   

    <fieldset>
        <legend>Service</legend>
        <div class="editor-label">
            @Html.LabelFor(model => model.Name)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Name)
            @Html.ValidationMessageFor(model => model.Name)
        </div>
        <div class="editor-label">
            @Html.LabelFor(model => model.Description)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Description)
            @Html.ValidationMessageFor(model => model.Description)
        </div>
        <div class="editor-label">
          @Html.LabelFor(model => model.isCompetition)
        </div>
        <div class="editor-field">
        @Html.DropDownListFor(model => model.isCompetition, new List<SelectListItem>(){ new SelectListItem(){ Text = "Competicion", Value="True"}, new SelectListItem(){ Text = "Mecanica", Value="False"}})
        </div>
        <div class="editor-label">
            @Html.LabelFor(model => model.BeforeImage, "Imagen antes")
        </div>
        <div>
            @Html.File("file", "BeforeImage")
        </div>
        <div>
            @Html.LabelFor(model => model.AfterImage, "Imagen despues")
        </div>
        <div>
            @Html.File("file", "AfterImage")
        </div>
        <p>
            <input type="submit" value="Create" />
        </p>
    </fieldset>
}
<div>
    @Html.ActionLink("Volver", "Index")
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
