@model RusoCars.Models.Text
@{
    ViewBag.Title = "Edit"; 
}
<h2>Editar</h2>
@using (Html.BeginForm())
{
    @Html.ValidationSummary(false);
    <fieldset>
        <legend>Text</legend>
        @Html.HiddenFor(model => model.TextId)
        <div class="editor-label">
            @Html.LabelFor(model => model.LanguageId, "Language")
        </div>
        <div class="editor-field">
            @Html.DropDownList("LanguageId", String.Empty)
            @Html.ValidationMessageFor(model => model.LanguageId)
        </div>
        <div class="editor-label">
            @Html.LabelFor(model => model.Descriptor)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Descriptor)
            @Html.ValidationMessageFor(model => model.Descriptor)
        </div>
        <div class="editor-label">
            @Html.LabelFor(model => model.Content)
        </div>
        <div class="editor-field">
            @Html.TextAreaFor(model => model.Content)
            @Html.ValidationMessageFor(model => model.Content)
        </div>
        <p>
            <input type="submit" value="Guardar" />
        </p>
    </fieldset>
}
<div>
 
    @Html.ActionLink("Volver", "Index")
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval");
     <script src="../../Scripts/tiny_mce/tiny_mce_src.js" type="text/javascript"></script>
            <script type="text/javascript">
            tinyMCE.init({
            mode: "textareas",
            theme: "simple"
            });
        </script>
}
