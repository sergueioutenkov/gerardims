@model IEnumerable<RusoCars.Models.News>
@{
    ViewBag.Title = "Index";
}
<h2>
    Noticias</h2>
<p>
    @Html.ActionLink("Nueva", "Create")
</p>
<table  class="tabla_datos">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Title)
        </th>
        <th>
            Image
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ShortDescription)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.LongDescription)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Date)
        </th>
        <th>
        </th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                <img src="@Html.DisplayFor(modelItem => item.Image.ImagePath)" alt="@Html.DisplayFor(modelItem => item.Image.ImageTitle)" height="75" width="100" />
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ShortDescription)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LongDescription)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Date)
            </td>
            <td>
                @Html.ActionLink("Editar", "Edit", new { id = item.NewsId }) |
                @Html.ActionLink("Detalle", "Details", new { id = item.NewsId }) |
                @Html.ActionLink("Borrar", "Delete", new { id = item.NewsId })
            </td>
        </tr>
    }
</table>
