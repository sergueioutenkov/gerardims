@{
    ViewBag.Title = "Pilotos";
}

<div class="menuIzq">
    <p class="titulo">
        Pilotos
    </p>
    <div class="lineaRoja">
                        
    </div>
    @for (int i = 0; i < Model.Count ; i++)
    {
        <div class="instancia">                        
            <img src="@Model[i].Image.ImagePath">
            @Ajax.ActionLink(" ", "ShowInstantPilot", "Public", new { id = (int)Model[i].PilotId }, new AjaxOptions
            {
               UpdateTargetId = "contenedor",
               InsertionMode = InsertionMode.Replace,
               HttpMethod = "GET",
               OnBegin = "ajaxOnBegin('contenedor')",
               OnComplete = "ajaxOnComplete('contenedor')",
               OnSuccess = "ajaxOnSuccess('contenedor')",               
               LoadingElementDuration = 2000
            })
        </div>    
    }
</div>
<div class="contenedor" id="contenedor">
    @Html.Partial("_showInstantPilot", (RusoCars.Models.Pilot)Model[0])
</div>
